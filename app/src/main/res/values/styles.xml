<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActivityTransitions">true</item>
    </style>


    <style name="AppThemeLightPink" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryPink</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPink</item>
        <item name="colorAccent">@color/colorAccentPink</item>
    </style>

    <style name="AppThemeLightBlue" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
    </style>

    <style name="AppThemeRed" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryRed</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRed</item>
        <item name="colorAccent">@color/colorAccentRed</item>
    </style>





    <style name="AppSecondTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="MyToolbarTextView" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
    </style>



    <style name="PopupMenuStyle">
        <item name="android:colorBackground">@color/colorBackgroundSecondary</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>



    <style name="PopupMenuTextViewStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:background">@color/colorBackgroundSecondary</item>
    </style>



    <style name="MyTabTextView" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

</resources>
