<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="240dp"
        android:layout_gravity="center"
        app:cardCornerRadius="120dp"
        app:cardBackgroundColor="@color/colorAccentRed"
        android:layout_marginBottom="@dimen/extra_half_margin"
        android:layout_height="240dp">

        <ImageView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:background="@color/colorAccentRed"
            android:contentDescription="@string/album_icon"
            android:id="@+id/iv_vp_now_playing"
            android:scaleType="fitXY"/>

        <player.music.customviews.UbuntuTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/extra_padding"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/colorTextPrimary"
            android:gravity="center"
            android:id="@+id/tv_lyrics_center"
            android:text="@string/lyrics_here"/>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>